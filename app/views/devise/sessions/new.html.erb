<%= provide :title, '| Sign In' %>

<h1>Sign in</h1>

<div class="pm-ctn">
	<% if flash[:alert] %>
		<div class="pm-error pm-error-sign-in">
			<div class="pm-error-title">Error! The following problems occured:</div><!-- .pm-error-title -->

			<ul>
				<% flash.each do |key, msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div><!-- .pm-error -->
	<% end %>

	<div class="pm-sign-in">
		<p>Please Sign In Below!</p>

		<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
		  <div class="pm-text-field">
		  	<%= f.label :email, 'Email:' %>
		  	<%= f.email_field :email, :autofocus => true %>
		  </div><!-- .pm-text-field -->

		  <div class="pm-text-field">
		  	<%= f.label :password, 'Password:' %>
		  	<%= f.password_field :password %>
		  </div><!-- .pm-text-field -->

		  <% if devise_mapping.rememberable? -%>
		    <div class="pm-remember-me">
		    	<%= f.check_box :remember_me %> <%= f.label :remember_me %>
		    </div><!-- .pm-remember-me -->
		  <% end -%>

		  <div class="pm-sign-in-button"><%= f.submit "Sign in", class: 'pm-btn' %></div>
		<% end %>
	</div><!-- .pm-sign-in -->
</div><!-- .pm-ctn -->