<%= provide :title, '| Portfolio Manager' %>

<h1>Portfolio Manager</h1>

<ul class="pm-index-header">
	<li class="pm-index-title">Item</li>
	<li class="pm-index-update">Last Updated</li>
	<li class="pm-index-thumb">Thumb</li>
</ul><!-- .pm-index-header -->

<div class="pm-index-body">

	<% @portfolios.each do |p| %>

		<%= link_to edit_portfolio_path(p), alt: p.title, title: p.title do %>
			<ul>
				<li class="pm-index-title"><%= p.title %></li>
				<li class="pm-index-update"><%= p.updated_at.strftime("%m/%d/%Y") %></li>
				<li class="pm-index-thumb"><%= image_tag p.img_url(:thumb).to_s %></li>
			</ul>
		<% end %>

	<% end %>
</div><!-- .pm-index-body -->